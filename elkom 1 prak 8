print('@       @   @  @        @   @')
print('@ @@@@  @@@@@  @        @@@@@')
print('@    @  @   @  @        @   @')
print('@@@@@@  @   @  @@@@     @   @')


def ganjilhuruf(hasil):
    x = hasil.replace(" ", "")
    z = x[1::2]
    return z

stringinput = input("Masukan Sebuah Kata : ")

a = ganjilhuruf(stringinput)

print(f"Karakter Index Ganjil : {a}")
